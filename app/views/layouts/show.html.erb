<p id="notice"><%= notice %></p>


<p>
  <strong>Nombre categor√≠a: </strong>
  <%= @category.name %>
</p>

<p>Crear producto</p>
<%= form_with(model: [@category, @product]) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>




<table class="table .table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Precio</th>
  </tr>
  <% @products.each do |p| %>
    <!-- <%if p.category_id == @category.id%> -->
    <tr>
      <td><%=p.name%></td>
      <td><%=p.price%></td>
      <td><%=link_to "Borrar", category_product_path(@category, p), method: :delete, class: 'btn btn-danger'%></td>
    </tr>
    <!-- <%end%> -->
  <% end %>
</table>







