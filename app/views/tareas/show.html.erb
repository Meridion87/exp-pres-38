<h2> Tarea: <%= @tarea.name %></h2>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <table class="table">
        <tr>
          <th>Top 5 </th>
        </tr>
        <% @uttop5.each do |usr| %>
        <tr>
          <td><%= User.find_by(id: usr.user_id).name %></td>
          <td><%= image_tag User.find_by(id: usr.user_id).imagen, class: 'card-img-top'%></td>
        </tr>

        <% end %>
      </table>
    </div>

    <div class="col-md-3">
      <table class="table">
        <tr>
          <th>Tarea completada por: </th>
        </tr>
        <% @ut.each do |usr| %>
        <tr>
          <td><%= User.find_by(id: usr.user_id).name %></td>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
